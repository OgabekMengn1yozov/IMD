<% var error, message, link, thoughts %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>ADMIN || IMD</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />
    <link
      rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"
    />

    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/styles/admin_style.css" />
  </head>
  <body>
    <div id="menu-overlay"></div>
    <div id="menu-toggle" class="closed" data-title="Menu">
      <i class="fa fa-bars"></i>
      <i class="fa fa-times"></i>
    </div>
    <header id="main-header"><%- include("components/admin-nav") %></header>

    <h2>Fikrlar</h2>
    <hr>

    <% if (message) { %>
      <div class="alert alert-success" role="alert"><%= message %></div>
    <% } %>

    <form method="post" action="/admin/thoughts/link">
      <% if (error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %>
      <div class="form-group">
        <label>You tube link</label>
        <input name="link" type="text" class="form-control" value="<%= link ? link[0].link : "" %>" />
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
    </form>

    <hr>

    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">â„–</th>
          <th scope="col">Fikrlar</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if (thoughts.length) { %> <% for(let i = 0; i < thoughts.length; i++)
        { %>
        <tr>
          <td><%= i+1 %></td>
          <td style="width: 100%; max-width: 100px"><p><%= thoughts[i].text %></p></td>
          <td>
            <a
              href="/admin/thoughts/delete/<%= thoughts[i].id %>"
              class="btn btn-danger"
              >Delete</a
            >
          </td>
        </tr>
        <% } %> <% } %>
      </tbody>
    </table>

    <form method="post" action="/admin/thoughts">
      <% if (error) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %>
      <div class="form-group">
        <label>Fikr qo'shish</label>
        <input name="text" type="text" class="form-control" />
      </div>
      <button type="submit" class="btn btn-primary">Create</button>
    </form>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/admin_script.js"></script>
  </body>
</html>
